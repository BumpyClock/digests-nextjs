{
  "$schema": "https://biomejs.dev/schemas/2.4.1/schema.json",
  "formatter": {
    "enabled": true,
    "indentWidth": 2,
    "indentStyle": "space",
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "trailingCommas": "es5",
      "semicolons": "always",
      "arrowParentheses": "always"
    }
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  },
  "files": {
    "includes": [
      "**",
      "!!**/.next",
      "!!**/node_modules",
      "!!**/compiled-tests",
      "!!**/coverage",
      "!!**/.turbo",
      "!**/pnpm-lock.yaml",
      "!**/bun.lock"
    ],
    "ignoreUnknown": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "useExhaustiveDependencies": "error"
      },
      "complexity": {
        "noImportantStyles": "off"
      },
      "style": {
        "useNodejsImportProtocol": "off",
        "useImportType": "off"
      },
      "suspicious": {
        "noArrayIndexKey": "warn",
        "useIterableCallbackReturn": "off"
      },
      "security": {
        "noDangerouslySetInnerHtml": "off"
      }
    }
  },
  "overrides": [
    {
      "includes": ["**/*.md", "**/*.mdx"],
      "linter": {
        "enabled": false
      },
      "formatter": {
        "enabled": false
      }
    }
  ]
}
