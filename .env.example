# ImageKit Configuration
# Get your ImageKit endpoint from https://imagekit.io/dashboard
# Format: https://ik.imagekit.io/your-imagekit-id
NEXT_PUBLIC_IMAGEKIT_ENDPOINT=https://ik.imagekit.io/your-imagekit-id

# Sentry Configuration
# Get these values from https://sentry.io/
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_ORG=
SENTRY_PROJECT=
SENTRY_AUTH_TOKEN=

# Environment
NEXT_PUBLIC_ENV=development

# Optional: Custom release name
# SENTRY_RELEASE=

# Other environment variables...

# ======================================
# Day 3 React Query Migration Flags
# ======================================

# Enable React Query for authentication management
# When true: Uses React Query for auth state, token management, and user sessions
# When false: Uses existing Zustand auth store
NEXT_PUBLIC_RQ_AUTH=false

# Enable React Query for feeds management  
# When true: Uses React Query for feed caching, fetching, and management
# When false: Uses existing Zustand feed store
NEXT_PUBLIC_RQ_FEEDS=false

# Enable offline support features
# Requires React Query migrations to be enabled
# Provides offline data access and sync when reconnected
NEXT_PUBLIC_OFFLINE_SUPPORT=false

# Enable background sync for feeds
# Automatically refreshes feeds in the background
# Improves user experience with fresh content
NEXT_PUBLIC_BACKGROUND_SYNC=false

# ======================================
# Migration Safety and Performance
# ======================================

# Migration timeout in milliseconds (default: 300000 = 5 minutes)
NEXT_PUBLIC_MIGRATION_TIMEOUT=300000

# Enable verbose migration logging (development only)
NEXT_PUBLIC_MIGRATION_VERBOSE_LOGGING=false

# Enable automatic rollback on migration failure
NEXT_PUBLIC_MIGRATION_AUTO_ROLLBACK=true

# Maximum number of migration retry attempts
NEXT_PUBLIC_MIGRATION_MAX_RETRIES=3

# ======================================
# Storage Configuration
# ======================================

# Preferred storage adapter (indexeddb|localstorage)
NEXT_PUBLIC_STORAGE_ADAPTER=indexeddb

# Enable data encryption for sensitive information
NEXT_PUBLIC_ENABLE_ENCRYPTION=true

# Storage quota warning threshold (percentage)
NEXT_PUBLIC_STORAGE_WARNING_THRESHOLD=0.8

# ======================================
# Cache Configuration
# ======================================

# React Query cache stale time (milliseconds)
NEXT_PUBLIC_CACHE_STALE_TIME=300000

# React Query garbage collection time (milliseconds)  
NEXT_PUBLIC_CACHE_GC_TIME=1800000

# Maximum cache size (bytes)
NEXT_PUBLIC_MAX_CACHE_SIZE=52428800

# ======================================
# Feed-Specific Configuration
# ======================================

# Feed refresh interval (milliseconds)
NEXT_PUBLIC_FEED_REFRESH_INTERVAL=1800000

# Maximum feeds to process in parallel
NEXT_PUBLIC_MAX_PARALLEL_FEEDS=5

# Feed batch size for processing
NEXT_PUBLIC_FEED_BATCH_SIZE=50

# Maximum items to cache per feed
NEXT_PUBLIC_MAX_ITEMS_PER_FEED=1000

# ======================================
# Gradual Rollout Strategy
# ======================================

# Phase 1: Enable auth migration only
# NEXT_PUBLIC_RQ_AUTH=true
# NEXT_PUBLIC_RQ_FEEDS=false

# Phase 2: Enable feeds migration  
# NEXT_PUBLIC_RQ_AUTH=true
# NEXT_PUBLIC_RQ_FEEDS=true

# Phase 3: Enable advanced features
# NEXT_PUBLIC_OFFLINE_SUPPORT=true
# NEXT_PUBLIC_BACKGROUND_SYNC=true